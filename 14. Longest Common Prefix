class Solution {
public:
    string longestCommonPrefix(vector<string>& strs) {
        int n = strs.size();
        string res;
        if (n == 0) {
            return res;
        }

        res = strs[0];
        for (int i = 1; i < n; i++) {
            int len = min(res.length(), strs[i].length());
            for (int j = len; j >= 0; j--) {
                if (strs[i].substr(0, j) == res.substr(0, j)) {
                    res = res.substr(0, j);
                    break;
                }
            }
        }

        return res;
    }
};
