class Solution {
public:
    ListNode* addTwoNumbers(ListNode* l1, ListNode* l2) {
        if (l1 == NULL) {
            return l2;
        }
        if (l2 == NULL) {
            return l1;
        }

        int carry = 0;
        ListNode* res = new ListNode(0);
        ListNode* p = res;

        while (l1 != NULL || l2 != NULL) {
            int num = carry;
            if (l1 != NULL) {
                num += l1->val;
                l1 = l1->next;
            }
            if (l2 != NULL) {
                num += l2->val;
                l2 = l2->next;
            }
            p->next = new ListNode(num % 10);
            p = p->next;
            carry = num / 10;
        }
        if (carry != 0) {
            p->next = new ListNode(carry);
        }
  
        return res->next;
    }
};
