class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int len = s.length();
        if (len == 0) {
            return 0;
        }

        int res = 0;
        int start = 0;
        unordered_map<char, int> posOfChar;
        for (int i = 0; i < len; i++) {
            if (posOfChar.find(s[i]) != posOfChar.end() && posOfChar[s[i]] >= start) {
                res = max(res, i - start);
                start = posOfChar[s[i]] + 1;
            }
            posOfChar[s[i]] = i;
        }
        res = max(res, len - start);

        return res;
    }
};
