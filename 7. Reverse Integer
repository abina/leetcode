class Solution {
public:
    int reverse(int x) {
        if (x == INT_MIN || x == 0) {
            return 0;
        }

        int sign = 1;
        if (x < 0) {
            sign = -1;
            x = -x;
        }

        long long num = 0;
        while (x > 0) {
            num = num * 10 + x % 10;
            if (num > INT_MAX) {
                return 0;
            }
            x /= 10;
        }

        return (int)num * sign;
    }
};
