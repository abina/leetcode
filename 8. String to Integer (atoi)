class Solution {
public:
    int myAtoi(string str) {
        int len = str.length();
        if (len == 0) {
            return 0;
        }

        int i; 
        for (i = 0; i < len; i++) {
            if (str[i] != ' ') {
                break;
            }
        }

        int sign = 1;
        if (i < len) {
            if (str[i] == '+') {
                i++;
            } else if (str[i] == '-') {
                sign = -1;
                i++;
            }
        }

        long long num = 0;
        for (;i < len; i++) {
            if (!isdigit(str[i])) {
                return num * sign;
            }
            num = num * 10 + str[i] - '0';
            if (num * sign >= INT_MAX) {
                return INT_MAX;
            }
            if (num * sign <= INT_MIN) {
                return INT_MIN;
            }
        }

        return num * sign;
    }
};
